{
    "name": "laravel-notification-channels/cmcom-whatsapp",
    "description": "Cm.com | WhatsApp Business",
    "version": "0.7",
    "homepage": "https://github.com/laravel-notification-channels/cmcom-whatsapp",
    "license": "MIT",
    "authors": [
        {
            "name": "Lorenzo Sfarra",
            "email": "hello@lorenzosfarra.com",
            "homepage": "https://lorenzosfarra.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cmdotcom/text-sdk-php": "^2.1",
        "illuminate/notifications": "~6.0 || ~7.0 || ~8.0",
        "illuminate/support": "~6.0 || ~7.0 || ~8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\CmComWhatsApp\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NotificationChannels\\CmComWhatsApp\\CmComWhatsAppServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\CmComWhatsApp\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}
